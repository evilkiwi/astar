{
  "compilerOptions": {
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "disableSizeLimit": true,
    "emitDeclarationOnly": true,
    "declaration": true,
    "baseUrl": ".",
    "outDir": "./build/",
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2020",
    "lib": ["esnext"],
    "paths": {
      "*": ["./src/types/*.d.ts"],
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "./src/**/*"
  ]
}
